@model HoldingERP.WebUI.Models.FaturaGirViewModel

@{
    ViewData["Title"] = "Fatura ve Stok Girişi";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5>Talep No: @Model.TalepId - Onaylanmış Tedarikçi Teklifi</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Tedarikçi</dt>
                    <dd class="col-sm-8">@Model.OnaylanmisTeklif.Tedarikci.Ad</dd>

                    <dt class="col-sm-4">Teklif Tarihi</dt>
                    <dd class="col-sm-8">@Model.OnaylanmisTeklif.TeklifTarihi.ToShortDateString()</dd>

                    <dt class="col-sm-4">Toplam Tutar</dt>
                    <dd class="col-sm-8"><strong>@Model.OnaylanmisTeklif.ToplamFiyat.ToString("C")</strong></dd>
                </dl>

                <h6>Satın Alınan Ürünler</h6>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Ürün Adı</th>
                            <th>Miktar</th>
                            <th>Birim Fiyat</th>
                            <th>Toplam</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var kalem in Model.OnaylanmisTeklif.TeklifKalemleri)
                        {
                            <tr>
                                <td>@kalem.Urun.Ad</td>
                                <td>@kalem.Miktar</td>
                                <td>@kalem.BirimFiyat.ToString("C")</td>
                                <td>@((kalem.Miktar * kalem.BirimFiyat).ToString("C"))</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <hr />
        <form asp-action="FaturaGir" method="post">
            <input type="hidden" name="TalepId" value="@Model.TalepId" />
            <input type="hidden" name="TeklifId" value="@Model.OnaylanmisTeklif.Id" />

            <h4>Fatura Bilgilerini Giriniz</h4>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="FaturaNo">Fatura Numarası</label>
                        <input id="FaturaNo" name="FaturaNo" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="FaturaTarihi">Fatura Tarihi</label>
                        <input id="FaturaTarihi" name="FaturaTarihi" class="form-control" type="date" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    </div>
                </div>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Faturayı Kaydet ve Stoğa Ekle" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}