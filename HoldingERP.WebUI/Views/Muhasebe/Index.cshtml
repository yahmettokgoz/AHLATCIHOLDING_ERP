@model IEnumerable<HoldingERP.Entities.Entities.SatinAlmaTalebi>

@{
    ViewData["Title"] = "Fatura Girişi Bekleyen Talepler";
}

<h1>@ViewData["Title"]</h1>

<p>Aşağıdaki onaylanmış talepler için fatura ve stok girişi yapılması gerekmektedir.</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Talep No</th>
            <th>Talep Eden</th>
            <th>Departman</th>
            <th>Talep Tarihi</th>
            <th>Açıklama</th>
            <th style="width: 150px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var talep in Model)
        {
            <tr>
                <td>@talep.Id</td>
                <td>@talep.TalepEdenKullanici?.AdSoyad</td>
                <td>@talep.TalepEdenKullanici?.Departman?.Ad</td>
                <td>@talep.TalepTarihi.ToShortDateString()</td>
                <td>@talep.Aciklama</td>
                <td>
                    <a asp-action="FaturaGir" asp-route-id="@talep.Id" class="btn btn-primary btn-sm">Fatura ve Stok Girişi</a>
                </td>
            </tr>
        }
    </tbody>
</table>