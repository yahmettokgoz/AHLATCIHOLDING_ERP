@using HoldingERP.Entities.Concrete
@model IEnumerable<Stok>

@{
    ViewData["Title"] = "Anlık Stok Durumu";
}

<h1>@ViewData["Title"]</h1>

<p>Sistemdeki tüm ürünlerin anlık stok miktarları aşağıda listelenmiştir.</p>

<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr>
            <th>Ürün Kodu/ID</th>
            <th>Ürün Adı</th>
            <th>Açıklama</th>
            <th>Miktar</th>
            <th>Birim</th>
            <th>Lokasyon</th>
            <th>Son Güncelleme</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var stok in Model)
        {
            <tr>
                <td>@stok.UrunId</td>
                <td><strong>@stok.Urun?.Ad</strong></td>
                <td>@stok.Urun?.Aciklama</td>
                <td>@stok.Miktar</td>
                <td>@stok.Urun?.Birim</td>
                <td>@stok.Lokasyon</td>
                <td>@stok.GuncellemeTarihi.ToString("g")</td>
                <td>
                    <a asp-action="StokCikis" asp-route-id="@stok.Id" class="btn btn-danger btn-sm">Stok Çıkışı Yap</a>
                </td>
            </tr>
        }
    </tbody>
</table>