@model IEnumerable<HoldingERP.Entities.Concrete.SatinAlmaTalebi>

@{
    ViewData["Title"] = "Stoğa Giriş Bekleyen Ürünler";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Talep No</th>
            <th>Talep Eden</th>
            <th>Departman</th>
            <th>Talep Tarihi</th>
            <th>Açıklama</th>
            <th style="width: 150px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var talep in Model)
        {
            <tr>
                <td>@talep.Id</td>
                <td>@talep.TalepEdenKullanici?.AdSoyad</td>
                <td>@talep.TalepEdenKullanici?.Departman?.Ad</td>
                <td>@talep.TalepTarihi.ToShortDateString()</td>
                <td>@talep.Aciklama</td>
                <td>
                    <a asp-action="FaturaGir" asp-route-id="@talep.Id" class="btn btn-primary btn-sm">Fatura ve Stok Girişi</a>
                </td>
                <td>
                    <form asp-action="StokGirisiYap" method="post">
                        <input type="hidden" name="talepId" value="@talep.Id" />
                        <button type="submit" class="btn btn-success btn-sm">Stoğa Giriş Yapıldı</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>




