@model HoldingERP.WebUI.Models.StokCikisViewModel

@{
    ViewData["Title"] = "Stok Çıkışı Yap";
}

<h1>@ViewData["Title"]</h1>

<h4>Ürün: @Model.UrunAdi</h4>
<h5>Mevcut Stok: @Model.MevcutMiktar</h5>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="StokCikis" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="StokId" />
            <input type="hidden" asp-for="UrunAdi" />
            <input type="hidden" asp-for="MevcutMiktar" />

            <div class="form-group mb-3">
                <label asp-for="CikisMiktari" class="control-label"></label>
                <input asp-for="CikisMiktari" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="CikisMiktari" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DepartmanId" class="control-label"></label>
                <select asp-for="DepartmanId" class="form-control"
                        asp-items="@(new SelectList(Model.Departmanlar, "Id", "Ad"))">
                    <option value="">-- Departman Seçiniz --</option>
                </select>
                <span asp-validation-for="DepartmanId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Stoktan Düş" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}