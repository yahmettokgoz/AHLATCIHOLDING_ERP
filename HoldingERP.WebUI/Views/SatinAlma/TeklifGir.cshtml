@model HoldingERP.WebUI.Models.TeklifGirViewModel

@{
    ViewData["Title"] = "Tedarikçi Tekliflerini Gir";
}

<h1>@ViewData["Title"]</h1>
<h4>Talep No: @Model.TalepId - Açıklama: @Model.TalepAciklamasi</h4>
<hr />

<form asp-action="TeklifGir" method="post">
    <input type="hidden" asp-for="TalepId" />

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div id="teklifListesi">
        @for (int i = 0; i < Model.GirilenTeklifler.Count; i++)
        {
            <div class="card mb-3 teklif-karti">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Teklif @(i + 1)</h5>
                    @if (i > 0)
                    {
                        <button type="button" class="btn btn-danger btn-sm teklif-sil">Bu Teklifi Sil</button>
                    }
                </div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label asp-for="GirilenTeklifler[i].TedarikciAdi"></label>
                        <input asp-for="GirilenTeklifler[i].TedarikciAdi" class="form-control" />
                        <span asp-validation-for="GirilenTeklifler[i].TedarikciAdi" class="text-danger"></span>
                    </div>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Ürün Adı</th>
                                <th>Miktar</th>
                                <th>Birim Fiyat (TL)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int j = 0; j < Model.GirilenTeklifler[i].TeklifKalemleri.Count; j++)
                            {
                                <input type="hidden" asp-for="GirilenTeklifler[i].TeklifKalemleri[j].TalepUrunId" />
                                <input type="hidden" asp-for="GirilenTeklifler[i].TeklifKalemleri[j].UrunAdi" />
                                <input type="hidden" asp-for="GirilenTeklifler[i].TeklifKalemleri[j].Miktar" />
                                <tr>
                                    <td>@Model.GirilenTeklifler[i].TeklifKalemleri[j].UrunAdi</td>
                                    <td>@Model.GirilenTeklifler[i].TeklifKalemleri[j].Miktar</td>
                                    <td>
                                        <input asp-for="GirilenTeklifler[i].TeklifKalemleri[j].BirimFiyat" class="form-control" type="number" step="0.01" />
                                        <span asp-validation-for="GirilenTeklifler[i].TeklifKalemleri[j].BirimFiyat" class="text-danger"></span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>

    <button type="button" id="yeniTeklifEkle" class="btn btn-success">Yeni Tedarikçi Teklifi Ekle</button>
    <hr />

    <div class="form-group">
        <input type="submit" value="Tüm Teklifleri Kaydet" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Satın Alma Listesine Geri Dön</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
          
            $("#yeniTeklifEkle").click(function () {
                var listContainer = $("#teklifListesi");
                var newIndex = listContainer.find(".teklif-karti").length;
                var sonTeklifKarti = listContainer.find(".teklif-karti:last");                
                var yeniTeklifKarti = sonTeklifKarti.clone(true, true);

                updateElementIndexes(yeniTeklifKarti, newIndex);

                yeniTeklifKarti.find("input[type='text']").val("");
                yeniTeklifKarti.find("input[type='number']").val("0");

                yeniTeklifKarti.find("h5").text("Teklif " + (newIndex + 1));

                if (yeniTeklifKarti.find(".teklif-sil").length === 0) {
                     yeniTeklifKarti.find('.card-header').append('<button type="button" class="btn btn-danger btn-sm teklif-sil float-end">Bu Teklifi Sil</button>');
                }

                listContainer.append(yeniTeklifKarti);

                var form = $("form");
                form.removeData("validator");
                form.removeData("unobtrusiveValidation");
                $.validator.unobtrusive.parse(form);
            });

            $(document).on("click", ".teklif-sil", function () {
                $(this).closest(".teklif-karti").remove();
                $("#teklifListesi").find(".teklif-karti").each(function (index, element) {
                    updateElementIndexes($(element), index);
                    $(element).find("h5").text("Teklif " + (index + 1));
                });
            });

            function updateElementIndexes(element, index) {
                element.find('input, label, span, select').each(function () {
                    var currentName = $(this).attr('name');
                    if (currentName) {
                        var newName = currentName.replace(/\[\d+\]/, '[' + index + ']');
                        $(this).attr('name', newName);
                    }
                   
                    var currentId = $(this).attr('id');
                    if (currentId) {
                        var newId = currentId.replace(/_\d+__/, '_' + index + '__');
                        $(this).attr('id', newId);
                    }
                    
                    var currentFor = $(this).attr('for');
                    if (currentFor) {
                        var newFor = currentFor.replace(/_\d+__/, '_' + index + '__');
                        $(this).attr('for', newFor);
                    }
                   
                    var currentValFor = $(this).attr('data-valmsg-for');
                    if (currentValFor) {
                         var newValFor = currentValFor.replace(/\[\d+\]/, '[' + index + ']');
                         $(this).attr('data-valmsg-for', newValFor);
                    }
                });
            }
        });
    </script>
}