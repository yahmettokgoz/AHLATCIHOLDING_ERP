@using HoldingERP.Entities.Concrete
@model IEnumerable<SatinAlmaTalebi>

@{
    ViewData["Title"] = "İşlem Bekleyen Satın Alma Talepleri";
}

<h1>@ViewData["Title"]</h1>

<p>Aşağıdaki talepler için tedarikçilerden teklif toplanması ve sisteme girilmesi gerekmektedir.</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Talep No</th>
            <th>Talep Eden</th>
            <th>Departman</th>
            <th>Talep Tarihi</th>
            <th>Açıklama</th>
            <th style="width: 150px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var talep in Model)
        {
            <tr>
                <td>@talep.Id</td>
                <td>@talep.TalepEdenKullanici?.AdSoyad</td>
                <td>@talep.TalepEdenKullanici?.Departman?.Ad</td>
                <td>@talep.TalepTarihi.ToShortDateString()</td>
                <td>@talep.Aciklama</td>
                <td>
                    <a asp-action="TeklifGir" asp-route-id="@talep.Id" class="btn btn-success btn-sm">Teklif Gir</a>
                </td>
            </tr>
        }
    </tbody>
</table>