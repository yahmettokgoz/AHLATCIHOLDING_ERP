@model IEnumerable<HoldingERP.Entities.Entities.SatinAlmaTalebi>

@{
    ViewData["Title"] = "Değerlendirme Bekleyen Talepler";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}


<p>Aşağıdaki talepler için girilen tedarikçi tekliflerinden en uygun olanının seçilmesi gerekmektedir.</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Talep No</th>
            <th>Talep Eden</th>
            <th>Departman</th>
            <th>Talep Tarihi</th>
            <th>Açıklama</th>
            <th style="width: 200px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var talep in Model)
        {
            <tr>
                <td>@talep.Id</td>
                <td>@talep.TalepEdenKullanici?.AdSoyad</td>
                <td>@talep.TalepEdenKullanici?.Departman?.Ad</td>
                <td>@talep.TalepTarihi.ToShortDateString()</td>
                <td>@talep.Aciklama</td>
                <td>
                    <a asp-action="TeklifleriKarsilastir" asp-route-id="@talep.Id" class="btn btn-primary btn-sm">Teklifleri Değerlendir</a>
                </td>
            </tr>
        }
    </tbody>
</table>