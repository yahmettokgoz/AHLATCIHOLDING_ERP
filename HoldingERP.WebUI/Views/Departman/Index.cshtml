@using HoldingERP.Entities.Concrete
@model IEnumerable<Departman>

@{
    
    ViewData["Title"] = "Departman Listesi";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-controller="Departman" asp-action="Create" class="btn btn-primary">Yeni Departman Ekle</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Departman Adı
            </th>
            <th style="width: 250px;">İşlemler</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var departman in Model)
        {
            <tr>
                <td> 
                    @departman.Ad
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@departman.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@departman.Id" class="btn btn-sm btn-info">Detay</a>
                    <a asp-action="Delete" asp-route-id="@departman.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>