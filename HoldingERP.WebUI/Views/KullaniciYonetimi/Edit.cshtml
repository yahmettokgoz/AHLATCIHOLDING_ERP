@model HoldingERP.WebUI.Models.EditRolesViewModel

@{
    ViewData["Title"] = "Kullanıcı Rollerini Düzenle";
}

<h1>@ViewData["Title"]</h1>

<h4>Kullanıcı: @Model.UserName</h4>

<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="UserId" />

            <div class="card">
                <div class="card-header">
                    Bu kullanıcıya atanacak rolleri seçiniz.
                </div>
                <div class="card-body">
                    @for (int i = 0; i < Model.Roles.Count; i++)
                    {
                        <div class="form-check m-1">
                            <input type="hidden" asp-for="@Model.Roles[i].RoleName" />

                            <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
                            <label class="form-check-label" asp-for="@Model.Roles[i].IsSelected">
                                @Model.Roles[i].RoleName
                            </label>
                        </div>
                    }
                </div>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Rolleri Güncelle" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Kullanıcı Listesine Geri Dön</a>
            </div>
        </form>
    </div>
</div>