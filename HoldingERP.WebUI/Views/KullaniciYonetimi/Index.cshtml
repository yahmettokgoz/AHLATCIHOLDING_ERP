@model IEnumerable<HoldingERP.Entities.Kullanici>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Kullanıcı Ekle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Kullanıcı Adı
            </th>
            <th>
                E-posta
            </th>
            <th>
                Ad Soyad
            </th>
            <th style="width: 250px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @user.UserName
                </td>
                <td>
                    @user.Email
                </td>
                <td>
                    @user.AdSoyad
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Rolleri Yönet</a>
                    <a asp-action="AssignAmir" asp-route-id="@user.Id" class="btn btn-info btn-sm">Amir Ata</a>
                </td>
            </tr>
        }
    </tbody>
</table>