@using HoldingERP.Entities.Concrete
@model SatinAlmaTalebi

@{
    ViewData["Title"] = "Talep Detayları ve Onay";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Talep Bilgileri</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Talep No</dt>
        <dd class="col-sm-9">@Model.Id</dd>

        <dt class="col-sm-3">Talep Eden</dt>
        <dd class="col-sm-9">@Model.TalepEdenKullanici?.AdSoyad</dd>

        <dt class="col-sm-3">Departman</dt>
        <dd class="col-sm-9">@Model.TalepEdenKullanici?.Departman?.Ad</dd>

        <dt class="col-sm-3">Talep Tarihi</dt>
        <dd class="col-sm-9">@Model.TalepTarihi.ToString("g")</dd>

        <dt class="col-sm-3">Durum</dt>
        <dd class="col-sm-9">@Model.Durum</dd>

        <dt class="col-sm-3">Açıklama</dt>
        <dd class="col-sm-9">@Model.Aciklama</dd>
    </dl>
</div>

<hr />

<h4>Talep Edilen Ürünler</h4>
<table class="table">
    <thead>
        <tr>
            <th>Ürün Adı</th>
            <th>Miktar</th>
            <th>Birim</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urun in Model.TalepUrunleri)
        {
            <tr>
                <td>@urun.Urun?.Ad</td>
                <td>@urun.Miktar</td>
                <td>@urun.Urun?.Birim</td>
            </tr>
        }
    </tbody>
</table>

<hr />

<div class="mt-3">
    <form asp-action="Approve" method="post" class="d-inline">
        <input type="hidden" name="talepId" value="@Model.Id" />
        <button type="submit" class="btn btn-success">Talebi Onayla</button>
    </form>

    <form asp-action="Reject" method="post" class="d-inline">
        <input type="hidden" name="talepId" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Talebi Reddet</button>
    </form>

    <a asp-action="Index" class="btn btn-secondary">Onay Listesine Geri Dön</a>
</div>